{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6"],
        "types": ["node"],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "outDir": "dist"
    },
    "include": [
        "./src/**/*"
    ]
}